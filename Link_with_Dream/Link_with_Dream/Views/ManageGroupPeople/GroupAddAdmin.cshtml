@{
    ViewData["Title"] = "GroupAddAdmin";
}
    <div class="col-md-8 offset-md-2">
        <h2>Add Admin for @ViewBag.group.Name</h2>
        <div class="row">
            <div class="col-md-8">
                <form asp-action="GroupAddAdmin" method="post" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="searchtext" class="form-control" value="" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Search" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <a asp-controller="ManageGroupPeople" asp-action="GroupAdmins" asp-route-id="@ViewBag.group.Id" class="btn btn-outline-info" style="float:right;">Back to Admin List</a>
            </div>

        </div>
        <partial name="_StateMessege" model="@ViewBag.Messege" />
        <br />
        @foreach (var item in ViewBag.UserInf)
        {
            <div class="card">
                <div class="row" style="padding:10px;">
                    <div class="col-md-3 align-center">
                        <img src="~/Images/2f020343-bffb-43f3-995d-9a127024fcfe_IMG_20161228_124205.jpg" class="rounded-circle align-center" style="width:110px; height:110px;" />
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <h2> @item.FirstName @item.LastName</h2>
                        </div>
                        <div class="row">
                            <label class="text-justify">Profession: @item.Profession </label>
                        </div>
                        <div class="row">
                            <form asp-action="GroupSetAdmin" method="post">
                                <input type="text" name="groupid" value="@ViewBag.group.Id" hidden />
                                <input type="text" name="userId" value="@item.Id" hidden />
                                <input type="submit" value="Set As Admin" class="btn btn-outline-info btn-sm" />
                            </form>
                            <a asp-controller="UserProfile" asp-action="AcademicQualification" asp-route-CUserId="@item.Id" class="btn btn-outline-info btn-sm">View Details</a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

