@model IEnumerable<Link_with_Dream.Models.CompanyPeople>

@{
    ViewData["Title"] = "CompanyAdminRequest";
}

<h2>Admin Request from Company</h2>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.Email)
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Email)
            </td>
            <td>
                <div class="row">
                    <form asp-action="AcceptAdminRequest" method="post">
                        <input type="text" name="id" value="@item.Id" hidden />
                        <input type="submit" value="Accept" class="btn btn-outline-primary" />
                    </form>

                    <form asp-action="RejectAdminRequest" method="post">
                        <input type="text" name="ret" value="CompanyAdminRequest" hidden />
                        <input type="text" name="id" value="@item.Id" hidden />
                        <input type="submit" value="Reject" class="btn btn-outline-danger" />
                    </form>
                    <a class="btn btn-outline-success" asp-controller="CompanyProfile" asp-action="CompanyAbout" asp-route-id="@item.Company.Id">View Details</a>
                </div>
                
            </td>
        </tr>
}
    </tbody>
</table>
