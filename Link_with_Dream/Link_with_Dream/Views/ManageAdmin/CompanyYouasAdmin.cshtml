@model IEnumerable<Link_with_Dream.Models.CompanyPeople>
@{
    ViewData["Title"] = "CompanyYouasAdmin";
}

<h2>Company List where you are as an Admin</h2>
<p>
    <a asp-controller="CompanyProfile" asp-action="CreateCompany">Create New Company</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Email)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="CompanyProfile" asp-action="CompanyAbout" asp-route-id="@item.Company.Id">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


