@model Link_with_Dream.Models.Company

@{
    ViewData["Title"] = "EditInformation";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4> @Model.Name</h4>
        <hr />
        <form asp-action="EditInformation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Objective" class="control-label"></label>
                <textarea asp-for="Objective" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Objective" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CoverPic" class="form-control" hidden />
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instalation" class="control-label"></label>
                <input asp-for="Instalation" class="form-control" />
                <span asp-validation-for="Instalation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CreateTime" class="form-control" hidden />
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="About" class="control-label"></label>
                <textarea asp-for="About" class="form-control text-justify" rows="6"></textarea>
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Services" class="control-label"></label>
                <textarea asp-for="Services" class="form-control text-justify" rows="6"></textarea>
                <span asp-validation-for="Services" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="CaseStudy" class="control-label"></label>
                <textarea asp-for="CaseStudy" class="form-control text-justify" rows="6"></textarea>
                <span asp-validation-for="CaseStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
