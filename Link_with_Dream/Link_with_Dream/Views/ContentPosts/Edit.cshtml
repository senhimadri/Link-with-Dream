@model Link_with_Dream.Models.ContentPost

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ContentPost</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-1">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Heading" class="control-label"></label>
                <input asp-for="Heading" class="form-control" />
                <span asp-validation-for="Heading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="12" id="editor5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <input asp-for="Image" class="form-control" hidden />
            <input asp-for="PostTime" class="form-control" hidden />
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" hidden></select>
            <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId" hidden></select>
            <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId" hidden></select>
            <select asp-for="CGPosterId" class="form-control" asp-items="ViewBag.CGPosterId" hidden></select>
            <input asp-for="XMStartTime" class="form-control" hidden />
            <input asp-for="XMEndTime" class="form-control" hidden />
            <input asp-for="PostType" class="form-control" hidden />
            <input asp-for="DeadLine" class="form-control" hidden />
            <input asp-for="JobType" class="form-control" hidden/>
            <input asp-for="Area" class="form-control" hidden/>


            @if (ViewBag.PostType == 2)
            {
                <div class="form-group">
                    <label asp-for="DeadLine" class="control-label"></label>
                    <input asp-for="DeadLine" class="form-control" />
                    <span asp-validation-for="DeadLine" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobType" class="control-label"></label>
                    <input asp-for="JobType" class="form-control" />
                    <span asp-validation-for="JobType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Area" class="control-label"></label>
                    <input asp-for="Area" class="form-control" />
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
            }




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />

@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $('#editor5').trumbowyg();
    </script>
}
