@model Link_with_Dream.Models.Group

@{
    ViewData["Title"] = "CreateGroup";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>Create a new Group</h4>
        <hr />
        <form asp-action="CreateGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenbersType" class="control-label"></label>
                <input asp-for="MenbersType" class="form-control" />
                <span asp-validation-for="MenbersType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Objective" class="control-label"></label>
                <textarea asp-for="Objective" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Objective" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TermsCondition" class="control-label"></label>
                <textarea asp-for="TermsCondition" class="form-control" rows="4"></textarea>
                <span asp-validation-for="TermsCondition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="CoverImage" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="CreateTime" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
