@model IEnumerable<Link_with_Dream.Models.Friendship>
@{
    ViewData["Title"] = "Index";
}
<div class="col-md-8 offset-md-2">
    <h2>Friend list</h2>
    @if (Model.Count() == 0)
    {
        <div class="card">
            <div class="col-md-12">
                <h4>You don't have any friend</h4>
            </div>

        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            if (item.ReceiverId == ViewBag.UserID)
            {
                <div class="card">
                    <div class="row" style="padding:10px;">
                        <div class="col-md-3 align-center">
                            <img src="~/Images/@item.Sender.ProfilePic" class="rounded-circle align-center" style="width:110px; height:110px;" />
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <h2> @Html.DisplayFor(modelItem => item.Sender.FirstName)  @Html.DisplayFor(modelItem => item.Sender.LastName)</h2>
                            </div>
                            <div class="row">
                                <label class="text-justify">Profession: @Html.DisplayFor(modelItem => item.Sender.Profession) </label>
                            </div>
                            <div class="row">
                                
                                <a asp-controller="Messege" asp-action="ChatCampus" asp-route-CUserId="@item.Sender.Id" class="btn btn-outline-primary btn-sm">Chat</a>

                                <a asp-controller="UserProfile" asp-action="AcademicQualification" asp-route-CUserId="@item.Sender.Id" class="btn btn-outline-info btn-sm">View Details</a>
                            </div>

                        </div>
                    </div>
                </div>
            }
            else if (item.SenderId == ViewBag.UserID)
            {
                <div class="card">
                    <div class="row" style="padding:10px;">
                        <div class="col-md-3 align-center">
                            <img src="~/Images/@item.Receiver.ProfilePic" class="rounded-circle align-center" style="width:110px; height:110px;" />
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <h2> @Html.DisplayFor(modelItem => item.Receiver.FirstName)  @Html.DisplayFor(modelItem => item.Receiver.LastName)</h2>
                            </div>
                            <div class="row">
                                <label class="text-justify">Profession: @Html.DisplayFor(modelItem => item.Receiver.Profession) </label>
                            </div>
                            <div class="row">
                                <a asp-controller="Messege" asp-action="ChatCampus" asp-route-CUserId="@item.Receiver.Id" class="btn btn-outline-primary btn-sm">Chat</a>
                                <a asp-controller="UserProfile" asp-action="About" asp-route-CUserId="@item.Receiver.Id" class="btn btn-outline-info btn-sm">View Details</a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        }
    }
</div>
